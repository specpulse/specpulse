# Include all resource files
include README.md
include LICENSE
include CHANGELOG.md
include SECURITY.md
include ARCHITECTURE.md
include RELEASE_NOTES_v2.2.0.md

# Include all template files
recursive-include specpulse/resources/templates *.md
recursive-include specpulse/resources/templates/decomposition *.md *.yaml *.ts

# Include all command files  
recursive-include specpulse/resources/commands *.md *.toml

# Include memory templates
recursive-include specpulse/resources/memory *.md

# Include validation files
include specpulse/resources/validation_rules.yaml
include specpulse/resources/validation_examples.yaml

# Exclude test and development files
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
